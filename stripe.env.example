# Copy this file to ".env" (do not commit it) and replace placeholders with real values.

# Flask
FLASK_ENV=development
FLASK_DEBUG=1
APP_HOST=127.0.0.1
APP_PORT=5000

# Stripe accounts (multi-key demo)
# Convention: STRIPE_ACCOUNT_<ALIAS>_*
# - <ALIAS> must match "account_alias" from config/catalog.json (e.g. EU, US)
# Master account alias:
# All objects (e.g. Customers) are created on this account unless explicitly stated otherwise.

STRIPE_MASTER_ACCOUNT_ALIAS=EU

STRIPE_ACCOUNT_EU_ACCOUNT_ID=acct_EU_PLACEHOLDER
STRIPE_ACCOUNT_EU_SECRET_KEY=sk_test_EU_PLACEHOLDER
STRIPE_ACCOUNT_EU_PUBLISHABLE_KEY=pk_test_EU_PLACEHOLDER
# Optional UI hint (2-letter ISO country code) for flags/labels:
STRIPE_ACCOUNT_EU_COUNTRY=FR
# Stripe webhook signing secret for endpoint /webhook/EU
STRIPE_ACCOUNT_EU_WEBHOOK_SIGNING_SECRET=whsec_EU_PLACEHOLDER

STRIPE_ACCOUNT_US_ACCOUNT_ID=acct_US_PLACEHOLDER
STRIPE_ACCOUNT_US_SECRET_KEY=sk_test_US_PLACEHOLDER
STRIPE_ACCOUNT_US_PUBLISHABLE_KEY=pk_test_US_PLACEHOLDER
# Optional UI hint (2-letter ISO country code) for flags/labels:
STRIPE_ACCOUNT_US_COUNTRY=US
# Stripe webhook signing secret for endpoint /webhook/US
STRIPE_ACCOUNT_US_WEBHOOK_SIGNING_SECRET=whsec_US_PLACEHOLDER

# Master account configuration for custom payment methods created by orchestration (per processing alias)
# Convention: STRIPE_MASTER_ACCOUNT_<ALIAS_PROCESSING_ACCOUNT>_CPM
STRIPE_MASTER_ACCOUNT_US_CPM=custom_cpm_type_for_us_placeholder
STRIPE_MASTER_ACCOUNT_EU_CPM=custom_cpm_type_for_eu_placeholder

# Optional (Address Element autocomplete when used standalone):
# If you want built-in address autocomplete, provide your own Google Maps "Places API" key.
# This is a browser key; restrict it by HTTP referrer in Google Cloud Console.
GOOGLE_MAPS_PLACES_API_KEY=AIzaSy_PLACEHOLDER


